<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="${relativePackage}.${activityClass}" 
    >
        <TextView
        android:id="@+id/Poitv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/poitv" />
        <EditText 
            android:id="@+id/PoiName"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="text"
    		android:hint="@string/poiNameHint"
            />
        <TextView
        android:id="@+id/numScanstv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numscanstv" />
        <EditText 
            android:id="@+id/Scans"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			       android:inputType="number"
    android:hint="@string/scansHint"
            />
        <TextView
        android:id="@+id/intervalScanstv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intervalscanstv" />
        <EditText 
            android:id="@+id/intervalScan"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			       android:inputType="number"
    android:hint="@string/intervalscan"
            />
	<Button 
	    android:id="@+id/Training"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/training"
	    android:layout_gravity="center_horizontal"
	    />

</LinearLayout>