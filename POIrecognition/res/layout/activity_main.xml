<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.davide.poirecognition.MainActivity" 
    >

	<TextView
	    android:id="@+id/info"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:text="@string/InfoText" />

	<Button
	    android:id="@+id/Start"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:layout_alignEnd="@+id/info"
	    android:layout_centerVertical="true"
	    android:background="@drawable/recbutton"
	    />

	<Button
	    android:id="@+id/Train"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:layout_centerVertical="true"
	    android:background="@drawable/trainbutton"
	    android:layout_alignStart="@+id/info"
	    />

</RelativeLayout>
