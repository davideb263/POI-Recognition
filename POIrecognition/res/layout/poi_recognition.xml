<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="com.example.davide.poirecognition.MainActivity" 
    >
<Button
    android:id="@+id/BackToMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:background="@android:drawable/ic_menu_revert" />
<Button 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:text="@string/BttRec" 
	android:id="@+id/Recognition" 
	android:layout_alignParentStart="true" /> 
<ProgressBar
         android:id ="@+id/recProgress"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         style="@android:style/Widget.Holo.Light.ProgressBar.Large"
         android:layout_below="@+id/Recognition" 
         android:indeterminate="true"
         android:visibility="invisible"
         />
<TextView 
    android:id="@+id/placeTv"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="@string/tvRecognition"
    android:layout_below="@+id/recProgress"
    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/placeTv"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <TextView
        android:id="@+id/poiSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PoiStayLength" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>